# ============================================
# Lockin Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in the values
# CRITICAL: Never commit real credentials to version control

# ============================================
# API Configuration
# ============================================

# Backend API URL (required)
# Development: http://localhost:3001/api
# Production: https://api.yourapp.com/api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Backend Server URL (required)
# Used for auth and other endpoints that might differ from API URL
# Development: http://localhost:3001
# Production: https://api.yourapp.com
NEXT_PUBLIC_SERVER_URL=http://localhost:3001

# ============================================
# Supabase Configuration (required for auth & storage)
# ============================================
# Get these values from your Supabase project dashboard

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anon Key (public key, safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# Google OAuth Configuration
# ============================================

# Google OAuth Client ID (if using)
google_client_id=your_google_client_id

# Google OAuth Client Secret (if using)
google_secret=your_google_client_secret

# ============================================
# NextAuth Configuration
# ============================================

# NextAuth Secret (required for JWT encryption)
NEXTAUTH_SECRET=your_nextauth_secret

# NextAuth URL (your app URL)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Solana/Blockchain Configuration
# ============================================

# Solana Network (required)
# Options: devnet, testnet, mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Solana RPC Endpoint (optional, defaults to public devnet RPC)
# For production, use a dedicated RPC provider like Helius, QuickNode, or Alchemy
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com

# Program ID for the Lockin Stake program (required)
# This is your Solana program's public key
NEXT_PUBLIC_PROGRAM_ID=7cVZcvgXHq6gNVSTCFCGvUpBYfKNe1R9khGPjuLjrPCi

# USDC Mint Address (required)
# mainnet-beta: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# devnet: 4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
NEXT_PUBLIC_USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Oracle Public Key for challenge validation (required)
NEXT_PUBLIC_ORACLE_PUBKEY=7cVZcvgXHq6gNVSTCFCGvUpBYfKNe1R9khGPjuLjrPCi

# ============================================
# Admin Configuration
# ============================================

# Admin Emails (required)
# Comma-separated list of admin email addresses
# Example: admin1@example.com,admin2@example.com
NEXT_PUBLIC_ADMIN_EMAILS=hellolockin@gmail.com
